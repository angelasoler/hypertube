# Database Configuration
# CRITICAL: All passwords MUST be changed for production
# Use strong, randomly generated passwords (e.g., openssl rand -base64 32)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hypertube
DB_USER=hypertube_user
# REQUIRED: Generate strong password - minimum 32 characters
# Example: openssl rand -base64 32
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
# REQUIRED: Generate strong password for Redis
# Example: openssl rand -base64 32
REDIS_PASSWORD=

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=hypertube
# REQUIRED: Generate strong password for RabbitMQ
# Example: openssl rand -base64 32
RABBITMQ_PASSWORD=

# JWT Configuration
# CRITICAL: JWT_SECRET must be a cryptographically secure random string
# Minimum 32 bytes (256 bits) required
# Generate with: openssl rand -base64 64
JWT_SECRET=
JWT_ACCESS_TOKEN_EXPIRY=3600
JWT_REFRESH_TOKEN_EXPIRY=604800
JWT_ISSUER=hypertube
JWT_AUDIENCE=hypertube-api

# OAuth2 Configuration
# 42 School (mandatory)
OAUTH_42_CLIENT_ID=your_42_client_id
OAUTH_42_CLIENT_SECRET=your_42_client_secret
OAUTH_42_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/42/callback

# Google (optional)
OAUTH_GOOGLE_CLIENT_ID=your_google_client_id
OAUTH_GOOGLE_CLIENT_SECRET=your_google_client_secret
OAUTH_GOOGLE_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/google/callback

# GitHub (optional)
OAUTH_GITHUB_CLIENT_ID=your_github_client_id
OAUTH_GITHUB_CLIENT_SECRET=your_github_client_secret
OAUTH_GITHUB_REDIRECT_URI=http://localhost:8080/api/v1/auth/oauth/github/callback

# External Video APIs
YTS_API_URL=https://yts.mx/api/v2
EZTV_API_URL=https://eztv.re/api
TMDB_API_KEY=your_tmdb_api_key
TMDB_API_URL=https://api.themoviedb.org/3

# OpenSubtitles API
OPENSUBTITLES_API_KEY=your_opensubtitles_api_key
OPENSUBTITLES_API_URL=https://api.opensubtitles.com/api/v1

# Application Configuration
API_GATEWAY_PORT=8080
EUREKA_SERVER_PORT=8761
USER_SERVICE_PORT=8081
SEARCH_SERVICE_PORT=8082
STREAMING_SERVICE_PORT=8083
COMMENT_SERVICE_PORT=8084

# Frontend Configuration
NUXT_PUBLIC_API_URL=http://localhost:8080

# Video Storage
VIDEO_CACHE_PATH=/var/hypertube/videos
SUBTITLE_CACHE_PATH=/var/hypertube/subtitles
VIDEO_CACHE_TTL_DAYS=30

# Email Configuration (for password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@hypertube.com
